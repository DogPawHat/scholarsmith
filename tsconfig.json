{
    "compilerOptions": {
        "target": "es6",
        "module": "es6",
        "jsx": "react",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "sourceMap": false,
        "inlineSourceMap": true,
        "inlineSources": true
    },
    "exclude": [
        "node_modules",
        "coverage",
        "dist"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useBabel": true,
        "useCashe": false
    },
    "compileOnSave": false,
    "compileOnBuild": false
}